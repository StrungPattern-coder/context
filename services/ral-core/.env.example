# RAL Core Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=RAL Core
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql+asyncpg://ral:ral_dev_password@localhost:5432/ral
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000

# =============================================================================
# CONTEXT ENGINE SETTINGS
# =============================================================================
DEFAULT_CONFIDENCE_THRESHOLD=0.5
HIGH_CONFIDENCE_THRESHOLD=0.8
CONTEXT_STALENESS_HOURS=24
CONTEXT_CRITICAL_STALENESS_HOURS=72

# =============================================================================
# LLM PROVIDERS (Optional - for prompt testing)
# =============================================================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
